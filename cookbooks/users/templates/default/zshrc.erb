# Set up a sexy prompt and stuff :)
function virtualenv_info {
    [ $VIRTUAL_ENV ] && echo '('`basename $VIRTUAL_ENV`') '
}
#use extended color pallete if available
if [[ $TERM = *256color* || $TERM = *rxvt* ]]; then
    turquoise="$fg[blue]"
    orange="$fg[yellow]"
    purple="$fg[magenta]"
    hotpink="$fg[red]"
    limegreen="$fg[green]"
    brightgreen="$fg_bold[green]"
    yellow="$fg_bold[yellow]"
fi

PROMPT=$'
%{$orange%}%m%{$reset_color%} %{$limegreen%}%~%{$reset_color%} $(virtualenv_info)
$ '